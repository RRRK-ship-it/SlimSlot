body {
  font-family: Arial, sans-serif;
  text-align: center;
  padding: 50px;
  background-color: #f9f9f9;
}

h1 {
  color: #2c3e50;
}

button {
  background-color: #3498db;
  color: white;
  padding: 10px 20px;
  border: none;
  border-radius: 8px;
  cursor: pointer;
}

button:hover {
  background-color: #2980b9;
}
